{
  "compilerOptions": {
      "outDir": "./build/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "allowJs": true,
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@hours": ["src/lib/hours"],
        "@components/*": ["src/components/*"]
      }
  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}