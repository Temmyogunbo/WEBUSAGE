{
  "name": "Web usage",
  "description": "Know how long your spend a website",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Open the chart",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "permissions": [
    "activeTab",
    "background",
    "tabs",
    "idle",
    "storage"
  ],
  "background": {
    "scripts": ["./background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}